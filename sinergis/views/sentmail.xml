<odoo>
  <data>

    <record id="sinergis.access_mail_mail_sinergis" model="ir.rule">
            <field name="name">mail.mail.sinergis</field>
            <field name="model_id" ref="mail.model_mail_mail"/>
            <field name="groups" eval="[Command.link(ref('base.group_user'))]"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sinergis_email_sent_tree" model="ir.ui.view">
        <field name="name">sinergis_email_sent.tree</field>
        <field name="type">tree</field>
        <field name="model">mail.mail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="subject"/>
                <field name="author_id"/>
                <field name="recipient_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="sinergis_email_sent_form" model="ir.ui.view">
        <field name="name">sinergis_email_sent.form</field>
        <field name="type">form</field>
        <field name="model">mail.mail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="subject"/>
                        <field name="author_id"/>
                        <field name="email_to"/>
                        <field name="recipient_ids" widget="many2many_tags"/>
                        <field name="body"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sinergis_email_sent_action" model="ir.actions.act_window">
        <field name="name">Emails envoyés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.mail</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Il n'y a pas de mail envoyé
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window.view" id="sinergis_email_sent_action_form">
        <field name="sequence" eval="560"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sinergis_email_sent_form"/>
        <field name="act_window_id" ref="sinergis_email_sent_action"/>
    </record>

    <record model="ir.actions.act_window.view" id="sinergis_email_sent_action_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sinergis_email_sent_tree"/>
        <field name="act_window_id" ref="sinergis_email_sent_action"/>
    </record>

<!-- MENU -->

<menuitem id="sinergis_email_sent_root"
          name="Emails envoyés"
          sequence="100"/>

<menuitem id="sinergis_email_sent_root_root"
          parent="sinergis_email_sent_root"
          action="sinergis_email_sent_action"
          name="Emails envoyés"
          sequence="100"/>

<menuitem id="email_sent"
          name="Emails envoyés"
          parent="sinergis_email_sent_root_root"
          action="sinergis_email_sent_action"
          sequence="100"/>

  </data>
</odoo>
