<odoo>
  <data>

    <record id="sinergis_email_sent" model="ir.ui.view">
        <field name="name">sinergis_email_sent</field>
        <field name="model">mail.mail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="subject"/>
            </tree>
        </field>
    </record>

    <record id="sinergis_email_sent_action" model="ir.actions.act_window">
        <field name="name">Emails envoyés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.mail</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Il n'y a pas de mail envoyé
            </p>
        </field>
    </record>

<!-- MENU -->

<menuitem id="sinergis_email_sent_root"
          name="Emails envoyés"
          sequence="10"/>

<menuitem id="sinergis_email_sent_root_root"
          parent="sinergis_email_sent_root"
          name="Emails envoyés"
          sequence="10"/>

<menuitem id="email_sent"
          name="Emails envoyés"
          parent="sinergis_training_training_root"
          action="training_action"
          sequence="10"/>

  </data>
</odoo>
