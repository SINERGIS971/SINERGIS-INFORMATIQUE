<?xml version="1.0" encoding="utf-8"?>

<template xml:space="preserve" owl="1">
    <t t-name="sinergis.ChatterTopbarInherit" t-inherit="mail.ChatterTopbar">
      <xpath expr="//div[@class='o-autogrow']" position="before">
        <button class="btn btn-link o_ChatterTopbar_button o_ChatterTopbar_buttonScheduleActivity" type="button" t-att-disabled="chatter.isDisabled" t-on-click="chatter.onClickScheduleActivity" title="Schedule an activity" data-hotkey="shift+a">
                            <i class="fa fa-clock-o"/>
                            Schedule activity 2
        </button>
      </xpath>
    </t>
</template>

<templates>

    <t t-extend="mail.ChatterTopbar">

        <t t-jquery="div.o_chatter_button_new_message" t-operation="replace">

        </t>

    </t>

</templates>
