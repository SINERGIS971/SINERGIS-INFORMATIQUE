<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Enregistrement des informations du rapport -->
	<record id="sinergis_report_timesheet" model="ir.actions.report">
		<field name="name">Feuille de temps - SINERGIS</field>
		<field name="model">project.task</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">sinergis.report_timesheet</field>
		<field name="report_file">sinergis.report_timesheet</field>
		<field name="binding_model_id" ref="model_project_task"/>
		<field name="binding_type">report</field>
	</record>
	<!-- Enregistrement des donnÃ©es du rapport -->
	<template id="sinergis.report_timesheet">
		<t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="company" t-value="docs.company_id[0] if len(docs) == 1 else docs.env.company"/>
                <t t-set="show_task" t-value="bool(docs.task_ids)"/>
                <t t-set="show_project" t-value="len(docs) > 1"/>

                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-lg-12">
                            <h2>
                                <span>Feuille de temps
                                    <t t-if="not show_project">
                                        pour <t t-esc="docs.name"/>
                                    </t>
                                </span>
                            </h2>
                        </div>
                    </div>
                    <t t-set="is_uom_day" t-value="docs.timesheet_ids and docs.timesheet_ids[0]._is_timesheet_encode_uom_day()"/>
                    <t t-set="lines" t-value="docs.timesheet_ids"/>
                    <t t-call="hr_timesheet.timesheet_table"/>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
	</template>
</odoo>
