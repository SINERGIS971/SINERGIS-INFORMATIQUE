<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Enregistrement des informations du rapport -->
    <record id="report_e" model="ir.actions.report">
        <field name="name">REPORT PDF</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sinergis.report_e</field>
        <field name="report_file">sinergis.report_e</field>
        <field name="binding_model_id" ref="model_helpdesk_ticket"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Enregistrement des donnÃ©es du rapport -->
    <template id="report_e">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="row text-center o_bold h1">
                    <div class="col o_bold h1 o_underline">
                        <span>Rapport d'intervention</span>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>
