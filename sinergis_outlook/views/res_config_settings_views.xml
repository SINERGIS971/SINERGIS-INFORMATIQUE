<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sinergis_outlook_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sinergis.outlook</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div class="mt16 row">
                    <label for="outlook_client_id" string="Sinergis Outlook Client ID" class="col-3 col-lg-3 o_light_label"/>
                    <field name="outlook_client_id" nolabel="1"/>
                    <label for="outlook_client_secret" string="Sinergis Outlook Client Secret" class="col-3 col-lg-3 o_light_label"/>
                    <field name="outlook_client_secret" password="True" nolabel="1"/>
                </div>
            </field>
        </record>
</odoo>
