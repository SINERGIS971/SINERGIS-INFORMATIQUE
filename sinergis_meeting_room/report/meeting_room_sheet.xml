<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	<record id="paperformat_meeting_room_sheet_report" model="report.paperformat">
    <field name="name">Paperformat feuille de salle de formation</field>
    <field name="default" eval="False"/>
    <field name="disable_shrinking" eval="True"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">0</field>
    <field name="margin_bottom">0</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="dpi">96</field>
	</record>

	<!-- Enregistrement des informations du rapport -->
	<record id="sinergis_meeting_room_meeting_room_sheet_report" model="ir.actions.report">
		<field name="name">Feuille de salle de formation</field>
		<field name="model">sinergis_meeting_room</field>
		<field name="report_type">qweb-pdf</field>
		<field name="paperformat_id" ref="sinergis_meeting_room.paperformat_meeting_room_sheet_report"/>
		<field name="report_name">sinergis_meeting_room.meeting_room_sheet_report</field>
		<field name="report_file">sinergis_meeting_room.meeting_room_sheet_report</field>
		<field name="binding_model_id" eval="False"/>
		<field name="binding_type">report</field>
	</record>


	<template id="meeting_room_sheet_report">
		<t t-call="web.html_container">
			<t t-call="training.layout_training_attendance_sheet">
			<div class="page">
			<p>HELLO WORLD</p>
			</div>
		</t>
		</t>
		</template>

</data>
</odoo>
